<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cr.ac.tec.ec.admin.AdminEditActivity"
    tools:showIn="@layout/activity_admin_edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/detail_imgPoster"
                        android:layout_width="match_parent"
                        android:layout_height="377dp"
                        android:layout_weight="1"
                        app:srcCompat="@android:drawable/ic_menu_report_image" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/detail_txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Title"
                            android:inputType="textPersonName"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/detail_txtDirector"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Director(s)"
                            android:inputType="textPersonName"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/detail_txtScreenplay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Screenplay by"
                            android:inputType="textPersonName"
                            android:textColor="@color/cardview_light_background"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/detail_txtYear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Year"
                            android:inputType="textPersonName"
                            android:textColor="@color/colorAccent"
                            android:textSize="24sp" />

                        <EditText
                            android:id="@+id/detail_txtActors"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Actors"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/background_light"
                            android:textSize="24sp" />

                        <Spinner
                            android:id="@+id/detail_spnGen2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:backgroundTint="@color/colorPrimary"
                    android:foreground="@color/colorPrimary" />

                <TextView
                    android:id="@+id/detail_txtReviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hapticFeedbackEnabled="false"
                    android:text="@string/reviewsTitle"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    tools:text="@string/reviewsTitle" />

                <TableLayout
                    android:id="@+id/detail_tblReviews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray">

                    <TableRow
                        android:id="@+id/detail_tbrColumn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="203dp"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="18sp"
                            android:text="USERNAME"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            tools:text="USERNAME" />

                        <TextView
                            android:id="@+id/review"
                            android:layout_width="147dp"
                            android:layout_height="wrap_content"
                            android:text="REVIEW"
                            android:textAlignment="center"
                            android:textSize="24sp"
                            tools:text="REVIEW" />

                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
